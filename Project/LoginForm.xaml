<Window x:Class="OnlineStoreApp.Views.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0" Width="250"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="250"/>

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0" Width="100" Click="btnLogin_Click"/>
    </Grid>
</Window>
