<Window x:Class="OnlineStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Store - Main Window" Height="300" Width="400">
    <Grid>
        <Label Content="Welcome to the Online Store!" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,20,0,0"/>

        <Button x:Name="btnManageProducts" Content="Manage Products" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="40" Click="btnManageProducts_Click"/>
        <Button x:Name="btnViewProducts" Content="View Products" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="40" Margin="0,60,0,0" Click="btnViewProducts_Click"/>
    </Grid>
</Window>
